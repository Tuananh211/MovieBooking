<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include
            layout="@layout/header_phim"
            />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:id="@+id/nameMovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khắc Tinh Của Quỷ"
                        android:textColor="#000"
                        android:layout_marginStart="20dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="20dp"
                        >

                        <TextView
                            android:id="@+id/format"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textAllCaps="true"
                            android:text="2D PHỤ ĐỀ"
                            android:layout_marginEnd="20dp"
                            />
                        <TextView
                            android:id="@+id/tvt_ageLimit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_c13"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:paddingVertical="2dp"
                            android:paddingHorizontal="5dp"
                            android:text="C13" />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Màn hình"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"

                    />
                <View
                    android:layout_width="200dp"
                    android:layout_height="5dp"
                    android:background="#FF5722"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:id="@+id/rcv_seat"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        />





                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:background="@color/colorGrey"
                    >

                    <LinearLayout
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="30dp"
                                android:src="@drawable/rectangle"
                                app:tint="@color/colorBlack"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:text="Ghế thường"/>
                            <TextView
                                android:id="@+id/amount_thuong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50.000 VNĐ"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="21dp"
                                android:layout_height="13.5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/seat_choose_custom"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:text="Ghế đã đặt"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:src="@drawable/rectangle"
                            app:tint="@color/red"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Ghế VIP"/>
                        <TextView
                            android:id="@+id/amount_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:text="70.000 VNĐ"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="13dp"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_height="13.5dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/seat_custom"

                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:text="Ghế đang chọn"/>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <CheckBox
                            android:id="@+id/cb_nuoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_nuoc"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/drink" />

                            <TextView
                                android:id="@+id/tvt_Nuoc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nước" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/tru_nuoc"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="-" />

                        <TextView
                            android:id="@+id/sl_nuoc"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:background="@color/colorGrey"
                            android:gravity="center"
                            android:text="1"

                            />

                        <Button
                            android:id="@+id/cong_nuoc"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="+" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Giá" />

                        <TextView
                            android:id="@+id/gia_nuoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="30,000VNĐ" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <CheckBox
                            android:id="@+id/cb_bong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_bong"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/popcorn" />

                            <TextView
                                android:id="@+id/tvt_bong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bỏng ngô" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/tru_bong"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="-" />

                        <TextView
                            android:id="@+id/sl_bong"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:background="@color/colorGrey"
                            android:gravity="center"
                            android:text="1" />

                        <Button
                            android:id="@+id/cong_bong"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="+" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Giá" />

                        <TextView
                            android:id="@+id/gia_bong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="50,000VNĐ" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <CheckBox
                            android:id="@+id/cb_combo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_combo"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/combo" />

                            <TextView
                                android:id="@+id/tvt_combo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Combo\nBỏng+nước" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/tru_combo"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="-" />

                        <TextView
                            android:id="@+id/sl_combo"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:background="@color/colorGrey"
                            android:gravity="center"
                            android:text="1" />

                        <Button
                            android:id="@+id/cong_combo"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="+" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Giá" />

                        <TextView
                            android:id="@+id/gia_combo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="70,000VNĐ" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:gravity="bottom|center_horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorGrey"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:padding="10dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Ghế:"
                                />
                            <TextView
                                android:id="@+id/tvt_listghe"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=" "
                                android:textColor="#000"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Tổng cộng:"
                                />
                            <TextView
                                android:id="@+id/tvt_tongtien"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/yellow"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_datve"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Đặt vé"
                        android:layout_weight="1"

                        android:layout_gravity="end|bottom|center_vertical"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/yellow"
                        />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>



</layout>