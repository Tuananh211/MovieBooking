<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/main_color"
        xmlns:tools="http://schemas.android.com/tools"
         android:tag="layout/user_info_fragment_0" xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="20dp"

            >
            <ImageView
                android:id="@+id/back_tt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/oval_btn_blackground"
                android:padding="8dp"
                android:src="@drawable/close_60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:background="#000"-->
<!--            />-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgUser"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shapeAppearanceOverlay="@style/circle"
                android:src="@drawable/user2"
                android:background="@color/colorGrey"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="50dp"
                android:id="@+id/pickImage"
                android:layout_height="50dp"
                android:src="@drawable/ic_camera"
                android:background="@color/colorWhite"
                app:shapeAppearanceOverlay="@style/circle"
                android:tint="@color/colorOrange"
                android:layout_gravity="end|bottom"

                />


        </FrameLayout>
        <EditText
            android:id="@+id/nameUser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:text=""
            android:textSize="18sp"
            android:background="@drawable/edittext_background"
            style="@style/roundedCorners"
            android:padding="15dp"
            android:inputType="text"
            />
        <TextView
            android:id="@+id/phoneuser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/edittext_background"
            android:text=""
            android:textSize="18sp"
            style="@style/roundedCorners"
            android:padding="15dp"
            />
        <EditText
            android:id="@+id/birthday_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/edittext_background"
            android:editable="false"
            style="@style/roundedCorners"
            android:inputType="date"
            android:padding="15dp"
            />
        <TextView
            android:id="@+id/gmail_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/edittext_background"
            android:text=""
            android:textSize="18sp"
            style="@style/roundedCorners"
            android:padding="15dp"
            />
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/edittext_background"
            style="@style/roundedCorners"
            android:inputType="text"
            android:padding="15dp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            >
            <RadioButton
                android:id="@+id/nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                />
            <RadioButton
                android:id="@+id/nu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Nữ"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <Button
                android:id="@+id/btnPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đổi mật khẩu"
                android:textColor="@color/yellow"
                android:layout_gravity="center_vertical|start"
                />
            <Button
                android:id="@+id/btnCapnhat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cập nhật"
                android:textColor="@color/yellow"
                android:layout_marginStart="90dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>
         